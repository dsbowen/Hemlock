{
    "name": "Hemlock survey",
    "stack": "heroku-18",
    "env": {
        "SECRET_KEY": {
            "generator": "secret"
        },
        "WKHTMLTOIMAGE": {
            "value": "/app/bin/wkhtmltoimage"
        }
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "free"
        },
        "worker": {
            "quantity": 1,
            "size": "free"
        }
    },
    "addons": [
        {
            "plan": "heroku-postgresql:hobby-dev"
        },
        "redis",
        {
            "plan": "heroku-redis:hobby-dev"
        }
    ],
    "buildpacks": [
        {
            "url": "heroku/python"
        },
        {
            "url": "https://github.com/dsbowen/heroku-buildpack-wkhtmltopdf"
        }
    ]
}